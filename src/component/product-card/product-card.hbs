{{#each data}}
<div class="page__content-card">
    <div>{{name}}</div>
    <div class="simple_font">{{description}}</div>
    <div class="text-grey simple_font">ID: {{id}}</div>
    <div class="page__card-bottom">
        <div>{{price}}₴</div>
        <a href="/product-edit?id={{id}}" class="link text-blue">Редагувати</a>
    </div>
</div>
{{/each}}